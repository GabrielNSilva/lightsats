{
  "name": "scheduler",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "deploy": "fly deploy --build-only --push",
    "machines:init": "fly apps create --machines",
    "machines:create": "dotenv -- bash -c 'fly m run $APP_IMAGE_ID --name lightsats-scheduler-machine-1 -a $MACHINES_APP_ID'",
    "machines:list": "dotenv -- bash -c 'fly machines list -a $MACHINES_APP_ID'",
    "machines:start": "dotenv -- bash -c 'fly machines start $MACHINE_ID -a $MACHINES_APP_ID'",
    "machines:update:imageid": "dotenv -- bash -c 'fly machines update $MACHINE_ID -i $APP_IMAGE_ID -a $MACHINES_APP_ID'",
    "machines:update:schedule": "dotenv -- bash -c 'fly machines update $MACHINE_ID --schedule hourly -a $MACHINES_APP_ID'"
  },
  "dependencies": {
    "@types/node": "^18.11.9",
    "@types/node-fetch": "^2.6.2",
    "dotenv": "^16.0.3",
    "node-fetch": "2",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "dotenv-cli": "^6.0.0"
  }
}
