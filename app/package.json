{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:start": "sudo service postgresql start",
    "db:generate:local": "dotenv -e .env.local -- yarn prisma generate",
    "db:push:local": "dotenv -e .env.local -- yarn prisma db push",
    "db:generate:staging": "dotenv -e .env.staging -- yarn prisma generate",
    "db:push:staging:force": "dotenv -e .env.staging -- yarn prisma db push --accept-data-loss",
    "db:generate:production": "dotenv -e .env.production -- yarn prisma generate",
    "db:push:production:force": "dotenv -e .env.production -- yarn prisma db push --accept-data-loss",
    "deploy:staging": "fly deploy -c fly-staging.toml",
    "deploy:production": "cli-confirm \"Do you really want to do a production deployment?\" && fly deploy -c fly-production.toml",
    "prettier": "yarn prettier --write ."
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.5",
    "@nextui-org/react": "^1.0.0-beta.10",
    "@prisma/client": "4.4.0",
    "bolt11": "^1.4.0",
    "copy-to-clipboard": "^3.3.2",
    "date-fns": "^2.29.3",
    "http-status-codes": "^2.2.0",
    "next": "12.3.1",
    "next-auth": "^4.13.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.38.0",
    "react-qr-code": "^2.0.8",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "18.8.4",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "cli-confirm": "^1.0.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "8.25.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "2.7.1",
    "prisma": "^4.4.0",
    "typescript": "4.8.4"
  }
}
